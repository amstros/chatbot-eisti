    #infos {
        padding-top:56px;
    }
	
	.centerer {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-wrap: wrap;
      }

	
	.title {
        flex-basis: 100%;
        margin:20px;
        font-size: 200%;
        text-shadow: 0 0 1em black;
        text-align: center;
        text-align: center;
        font-variant: small-caps;
